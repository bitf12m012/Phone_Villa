@model MvcApplication4.Models.Customer
<div class="center_content">

    <div class="title_bar" style=" font-weight:bolder; color:firebrick; text-align:center; opacity:0.4"><h1>Sign In</h1>

    </div>
    <label class="center_title_bar"><strong>@TempData["ThanksShopping"]</strong></label>
    <label class="center_title_bar"><strong>@TempData["UserRegistered"]</strong></label>
    <div class="prod_box_big" >
        <div class="top_prod_box_big"></div>
        <div class="center_prod_box_big">
            <div class="contact_form">
                <div class="form_row"  >
                    @using(Html.BeginForm("AuthenticateCustomer","Account",FormMethod.Post))
                    { 
                        <table >
                            <tr>
                                <td ><strong>@Html.LabelFor(model => model.Name, new { @class = "contact_input" })</strong></td>
                                <td >@Html.TextBoxFor(model => model.Name, new { @class = "contact_input",required="required" })</td>
                            </tr>
                          
                            <tr>
                                
                                <td><strong>@Html.LabelFor(model => model.Password, new { @class = "contact_input" })</strong></td>
                                <td >@Html.PasswordFor(model => model.Password, new { @class="contact_input",required="required"})</td>
                            </tr>
                            <tr>
                                <td>&nbsp </td>
                               <td ><br /><input style="border-radius:10px; margin:auto;border:thick; color:black; font-weight:bold; background-color:firebrick; height:30px; width:100px; opacity:0.7" type="submit" value="Sign In" ></td>
                            </tr>
                        </table>
                    }
                    <label><strong>@TempData["message"]</strong></label>

</div>
        </div>
        <div class="bottom_prod_box_big"></div>
    </div>
</div>
    </div>
<!-- end of center content -->